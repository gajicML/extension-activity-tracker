{
  "name": "Activity tracker",
  "version": "1.0",
  "description": "Track user activity",
  "permissions": ["activeTab", "declarativeContent", "storage", "tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/clock16.png",
      "32": "images/clock32.png",
      "48": "images/clock48.png",
      "128": "images/clock128.png"
    }
  },
  "icons": {
    "16": "images/clock16.png",
    "32": "images/clock32.png",
    "48": "images/clock48.png",
    "128": "images/clock128.png"
  },
  "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net/npm/chart.js@2.8.0; object-src 'self'",
  "manifest_version": 2
}
